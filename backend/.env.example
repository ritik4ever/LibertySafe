# Server Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/libertysafe

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# IPFS (Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Bitcoin Ordinals
ORDINALSBOT_API_KEY=your-ordinalsbot-api-key
BITCOIN_RECEIVE_ADDRESS=your-bitcoin-address

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,png,jpg,jpeg,mp4,mp3

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# External Services
BITCOIN_RPC_URL=https://bitcoin-rpc-endpoint
BITCOIN_RPC_USER=rpc-username
BITCOIN_RPC_PASSWORD=rpc-password